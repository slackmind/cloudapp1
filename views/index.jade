extends layout

block content
  h1=title
  p Find information about recent vulnerabilities
  p=sometext
  p Enter a keyword to search for a keyword summary of vulnerabilities
  form(action='/searchterm', name="keyword", method="get")
    div.input
      span.label Keyword
      input(type="text", name="keyword") 
    select#resultNum(name='resultNum')
      option() How many results
      option(value='1') 1
      option(value='2') 2
      option(value='5') 5
      option(value='10') 10
    button(type='submit') Search


  h1 Find information about vulnerabilites after a particular Month/Year
